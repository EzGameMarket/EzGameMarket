@page
@model WebMVC.Views.Account.LoginModel
@{
}

<div id="login" class="tab-pane fade show active">
    <div class="account-form-container login-form">
        <div class="account-form">
            <form action="#" method="post">
                <input type="text" name="user-name" class="form-control" placeholder="Felhasználónév">
                <input type="password" name="user-password" class="form-control" placeholder="Jelszó">
                <div class="button-box">
                    <div class="login-toggle-btn d-flex justify-content-between">
                        <div class="remember d-flex">
                            <input type="checkbox">
                            <label>Emlékezz rám</label>
                        </div>
                        <div class="forgot">
                            <a href="#">Elfelejtett a jelszavad?</a>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default btn-normal"><span>Bejelentkezés</span></button>
                </div>
            </form>
        </div>
    </div>
</div>