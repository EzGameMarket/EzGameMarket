@model ISideBar

<aside class="sidebar product-filter">
    <!-- Categories -->
    <section class="widget widget-categories-cat">
        <h3 class="widget-title widget-title__large">@(Model.CategoryTitle ?? "Kategóriák") </h3>
        <div class="widget-content">
            <ul class="list-categories list-widget">

                @foreach (var item in Model.CategoryData)
                {
                    if (item.Active)
                    {
                        <li>
                            <a class="category-item" asp-controller="Search" asp-action="Category" asp-route-category="@item.Data">@item.Title</a>
                        </li>
                    }
                }
            </ul>
        </div>
    </section>
    <!-- /Categories -->
    <div class="widget-woof">
        <h3 class="widget-title widget-title__large">@(Model.RefineByTitle ?? "Szűrés")</h3>
        <div class="widget-woof-content">

            @foreach (var item in Model.RefineByData)
            {
                <section class="widget section-@item.CategoryData">
                    <h3 class="widget-title widget_collapse">@item.CategoryTitle szerint</h3>
                    <div class="widget-content">
                        <ul class="list-checked">
                            @foreach (var data in item.Data)
                            {
                                if (data.Active)
                                {
                                    if (data.Checked)
                                    {
                                        <li class="current"><a href="#">@data.Title</a></li>
                                    }
                                    else
                                    {
                                        <li><a href="#">@data.Title</a></li>
                                    }
                                }
                            }
                        </ul>
                    </div>
                </section>
            }

            <!-- Price -->
            <section class="widget section-price widget_filter">
                <h3 class="widget-title widget_collapse">Ár</h3>
                <div class="widget-content">
                    <div class="ps-slider ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content" data-default-min="@Model.MinPrice" data-default-max="@Model.MaxPrice" data-max="@Model.MaxPrice" data-step="100" data-unit="Ft"><div class="ui-slider-range ui-corner-all ui-widget-header" style="left: 0%; width: 100%;"></div><span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default" style="left: 0%;"></span><span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default" style="left: 50%;"></span></div>
                    <p class="ps-slider__meta">Ár:<span class="ps-slider__value ps-slider__min">@Model.MinPrice</span>-<span class="ps-slider__value ps-slider__max">@Model.MaxPrice</span></p>
                </div>
            </section>
            <!--/Price -->
        </div>
    </div>
</aside>